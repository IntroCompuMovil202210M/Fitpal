<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FitPal" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/fondo_claro</item>
        <item name="colorPrimary">@color/colorUI_claro</item>
        <item name="colorPrimaryVariant">@color/colorUI_claro_variacion</item>
        <item name="colorOnBackground">@color/fondo_claro</item>
        <item name="android:textColor">@color/letras_modo_claro</item>
        <item name="android:textColorHint">@color/letras_modo_oscuro</item>
        <item name="buttonTint">@color/letras_modo_oscuro</item>
        <item name="backgroundTint">@color/fondo_claro</item>
        <item name="hintTextColor">@color/fondo_oscuro</item>
